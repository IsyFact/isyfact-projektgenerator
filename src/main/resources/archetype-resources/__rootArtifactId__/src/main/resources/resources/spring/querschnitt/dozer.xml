#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/util 
           http://www.springframework.org/schema/util/spring-util-3.1.xsd">
    
    <util:list id="dozer-mappings" value-type="java.lang.String">
        <value>resources/dozer/dozer-mapping.xml</value>
    </util:list>
    
     <bean name="dozer" class="org.dozer.DozerBeanMapper" scope="singleton">
        <property name="mappingFiles" ref="dozer-mappings" />
    </bean>

</beans>
