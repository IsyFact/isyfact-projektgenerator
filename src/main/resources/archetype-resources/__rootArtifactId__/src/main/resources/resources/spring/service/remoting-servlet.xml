#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
<!-- ======================================================================
     Dies ist eine Spring Konfigurationsdatei fuer den Context des Spring
     Dispatcher-Servlets (siehe Datei web.xml). Fuer das Servlet kann
     nicht auf den vorhandenen Spring-Kontext zugegriffen werden,
     weshalb von dieser Konfigurationsdatei nicht auf Beans anderer 
     Konfigurationsdateien zugegriffen werden kann.
     
     In dieser Datei werden die HttpInvoker-Services des Registers
     definiert.
     ======================================================================  -->
     
	<!-- ======================================================================
     Die HTTP-Invoker Schnittstelle: Der Export des Auskunft-Services.
     ======================================================================  -->    
    <bean name="/AuskunftBean_v1_0" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="auskunftExceptionFassade"/>
        <property name="registerTraceInterceptor" value="false"/>
        <property name="serviceInterface" value="${package}.service.auskunft.httpinvoker.v1_0.AuskunftRemoteBean"/>
    </bean>
    
    <!-- ======================================================================
     Die HTTP-Invoker Schnittstelle: Der Export des Administration-Services.
     ======================================================================  -->    
    <bean name="/AdminBean_v1_0" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="adminExceptionFassade"/>
        <property name="registerTraceInterceptor" value="false"/>
        <property name="serviceInterface" value="${package}.service.admin.httpinvoker.v1_0.AdministrationRemoteBean"/>
    </bean>   


</beans>
